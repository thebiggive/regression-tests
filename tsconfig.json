{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "removeComments": false,
    "noEmit": false,
    "skipLibCheck": true,
    "types": ["node", "@wdio/globals/types"],
    "outDir": "./build",
  },
  "include": [
    "pages",
    "steps",
    "support",
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "types"
  ]
}